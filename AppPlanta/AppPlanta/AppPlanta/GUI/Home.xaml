<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPlanta.GUI.Home">
    <ContentPage.Content>
        <RelativeLayout>
            <Image Source="BackGraund1.png" Aspect="AspectFill" RelativeLayout.HeightConstraint="{ConstraintExpression Type=RelativeToParent, Property=Height}" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"/>
            <ScrollView Orientation="Vertical">
            <StackLayout>
                    <Label  Text="Control y Monitoreo   Planta Multiproposito" HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" Margin="0,50,0,80" FontSize="Medium" TextColor="White"/>
                    <RelativeLayout>
                        <Button x:Name="Ok" Text="Ingresar" Clicked="Ok_Clicked" AnchorX="15"  VerticalOptions="End"/>
                        <Button x:Name="about" Text="About" Clicked="about_Clicked" AnchorX="15"  VerticalOptions="End"/>
                    </RelativeLayout>
                    <StackLayout.Padding>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="UWP" Value="100,0,100,0"/>
                    </OnPlatform>
                </StackLayout.Padding>
            </StackLayout>
            </ScrollView>
        </RelativeLayout>
    </ContentPage.Content>
</ContentPage>