<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppPlanta.App">
    <Application.Resources>
        <!--Datos-->
        <x:String x:Key="Title">BIENVENIDO A LA APLICACIÓN: PLANTA MULTIPROPÓSITO</x:String>
        <x:String x:Key="DescriptionApp">Esta apliación tiene como fin mostrar los datos obtenidos de una planta multipropósito y el estado del sistema. Además esta permite el control de las válvulas desde el dispositivo móvil. El fin de esta aplicación es netamente educativa no se permite la venta ni la distribución.</x:String>

        <!--Styles-->
        <Style TargetType="Label" x:Key="Titles">
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Italic"/>
            <Setter Property="FontSize" Value="Large"/>
        </Style>
        <Style TargetType="Label" BasedOn="Titles" x:Key="Normal">
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="HorizontalTextAlignment" Value="Start"/>
            <Setter Property="VerticalOptions" Value="Center"/>
            
        </Style>
        <Style TargetType="Image" x:Key="BaseIcon">
            <Setter Property="Aspect" Value="AspectFill"/>
        </Style>
    </Application.Resources>
</Application>